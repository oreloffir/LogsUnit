eader.header
    nav.navbar
        // Search Box
        .search-box
            button.dismiss
                i.icon-close
            |
            form#searchForm(action='#', role='search')
                input.form-control(type='search', placeholder='What are you looking for...')
        |
        .container-fluid
            .navbar-holder.d-flex.align-items-center.justify-content-between
                // Navbar Header
                .navbar-header
                    // Navbar Brand
                    a.navbar-brand(href='/')
                        .brand-text.brand-big
                            span LogsUnit
                            strong Dashboard
                        |
                        .brand-text.brand-small
                            strong LogsUnit
                    // Toggle Button
                    a#toggle-btn.menu-btn.active(href='#')
                        span
                        span
                        span
                // Navbar Menu
                ul.nav-menu.list-unstyled.d-flex.flex-md-row.align-items-md-center
                    // Search
                    li.nav-item.d-flex.align-items-center
                        a#search(href='#')
                            i.icon-search
                    // Notifications
                    li.nav-item.dropdown
                        a#notifications.nav-link(rel='nofollow', data-target='#', href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
